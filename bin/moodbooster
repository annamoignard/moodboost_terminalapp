#!/usr/bin/env ruby

# Here are my gems 
require "tty-prompt"
require "colorize"
require "terminal-table"
# Classes loaded 
require_relative "../lib/user"
require_relative "../lib/track"
require_relative "../lib/menu"
require_relative "../lib/moods_repo"
require_relative "../lib/quotes"

option = ARGV[0]
ARGV.clear 

unless option 
  username = User.welcome_user
  user = User.new(username)
  menu = Menu.new(user) #instance of the class where we can call the instance methods of menu class
else 
  user = User.new
  menu = Menu.new(user)
end 


def help_docs 
  puts "-l and --list"
  puts "shortcut to get to this week's moods"
end

if option == "-h"
  help_docs
  exit
end

if option == "-l" || option == "--list"
  menu.terminal_table
  exit 
end

menu.router